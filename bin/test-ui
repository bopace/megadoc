#!/usr/bin/env bash

# Run karma tests for the UI sources.
#
# Usage:
#
#     $0

[ -f "./package.json" ] && grep '"name": "megadoc"' ./package.json &> /dev/null || {
  echo "$0: Must be run from megadoc root.";
  exit 1
}

source "./bin/_helpers.sh"

nodejs_use_local_packages

(cd ./packages/megadoc-html-serializer; exec ./node_modules/.bin/karma start $@)
