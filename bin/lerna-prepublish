#!/usr/bin/env bash

set -e

./bin/scan-dependency-versions

npm run lint

# packages must be built first before running the tests
{
  ./node_modules/.bin/lerna exec \
    --concurrency 1 \
    --stream \
    -- NODE_ENV=production \
       PACKAGE="${LERNA_PACKAGE_NAME}" \
       ../../bin/prepublish -S test -S lint
}

npm run test

echo "All good!"